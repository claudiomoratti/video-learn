<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Author</th>
      <th>Content</th>
      <th>Reported count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.lesson_id %></td>
        <td><%= comment.author %></td>
        <td><%= comment.content %></td>
        <td><%= comment.reported_count %></td>
        <td><%= link_to 'Show', lesson_comment_path(@lesson, comment) %></td>
        <td><%= link_to 'Edit', edit_lesson_comment_path(@lesson,comment) %></td>
        <td><%= link_to 'Destroy', lesson_comment_path(@lesson, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_lesson_comment_path(@lesson) %>
